import static java.lang.Math.*;

public class Wave {
	private float amplitude;
	private boolean isOpen;
	private float frequency;
	private float waveSpeed;
	private float waveNumber;
	private float wavelength;
	private float velocity;
	
	public Wave (float A, float omega, float k) {
		amplitude = A;
		waveSpeed = omega;
		waveNumber = k;
	}
	
	public void calculateWaveNumber() {
		waveNumber = (float) (2 * PI / wavelength);
	}
	
	public double height (int x, float time) {
		return amplitude * cos(waveNumber * x - waveSpeed * time);
	}
	
	public void setOpenness (boolean isOpen_) {
		isOpen = isOpen_;
	}
	
	public boolean getOpenness () {
		return isOpen;
	}
	
	public void setAmplitude (float newAmplitude) {
		amplitude = newAmplitude;
	}
}
