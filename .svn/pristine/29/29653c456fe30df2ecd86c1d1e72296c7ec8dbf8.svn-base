import java.awt.*;
import javax.swing.*;

public class Canvas extends JPanel {
	private static final long serialVersionUID = -3579073821580694058L;
	
	private float time = 0;
	private boolean direction = true;
	private Wave tsunami = new Wave(30, 2, 8);
	
	public Canvas () {
		this.setSize(550, 500);
		setBorder(BorderFactory.createLineBorder(Color.pink));
	}
	
	public void paint (Graphics gfx) {
		for (int ix = 0; ix < 550; ix++) {
			gfx.drawLine(ix, (int)tsunami.height(ix, time)+200, ix, (int)tsunami.height(ix, time)+200);
		}
		time += 0.1;
	}
	
	public Wave getWave () {
		return tsunami;
	}
	
